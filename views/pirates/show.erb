<h1>Display your Pirate here</h1>
  <div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
  </div><br>

<h2>Display your first ship here</h2>
  <% @ships.each_with_index do |ship, i| %>
    <div class="ship">
      <% if i == 0 %>
      <p>Ship: <%= ship.name %></p><br>
      <p>Type: <%= ship.type %></p><br>
      <p>Booty: <%= ship.booty %></p><br>
      <% end %>
    </div><br>
  <% end %>

<h2>Display your second ship here</h2>
  <% @ships.each_with_index do |ship, j| %>
    <div class="ship">
    <% if j == 1 %>
      <p>Name: <%= ship.name %></p><br>
      <p>Type: <%= ship.type %></p><br>
      <p>Booty: <%= ship.booty %></p><br>
      <% end %>
    </div><br>
  <% end %>



