<h1>Display your Pirate here</h1>
  <div class="pirate">
  <h3>Name: <%= @pirate.name %></h3><br>
  <h4>Weight: <%= @pirate.weight %></h4>
  <h4>Height: <%= @pirate.height %></h4>
  </div><br>

<h2>Display your first ship here</h2>
  <% @ships.each do |ship| %>
    <div class="ship">
      <p>Ship: <%= ship_name_1.name %></p><br>
      <p>Type: <%= ship_type_1.type %></p><br>
      <p>Booty: <%= ship_booty_1.booty %></p><br>
    </div><br>
  <% end %>

